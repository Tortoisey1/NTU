#include <stdio.h>
#include <math.h>

int main()
{
    int deci, bi = 0, temp = 1;
    printf("Enter a decimal number:\n");
    scanf("%d", &deci);

    while (deci != 0)
    {

        bi += (deci % 2) * temp;
        temp *= 10;
        deci /= 2;
    }

    printf("The equivalent binary number: %d\n", bi);

    return 0;
}